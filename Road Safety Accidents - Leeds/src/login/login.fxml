<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import validation.ErrorLabel?>

<?import validation.RequiredField?>
<AnchorPane prefHeight="310.0" prefWidth="460.0"
	style="-fx-background-color: #00838f;"
	xmlns="http://javafx.com/javafx/8.0.172-ea"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="login.LoginController">
	<children>
		<Label layoutX="20.0" layoutY="10.0"
			text="Road Traffic Analysis - Leeds" textFill="WHITE">
			<font>
				<Font name="Arial Bold" size="22.0" />
			</font>
		</Label>
		<TextField fx:id="user" layoutX="100.0" layoutY="50.0"
			prefHeight="25.0" prefWidth="175.0" />
		<Label layoutX="25.0" layoutY="55.0" text="Username:" textFill="WHITE"/>
		<Label layoutX="25.0" layoutY="95.0" text="Password:" textFill="WHITE"/>
		<Button fx:id="guest" layoutX="50.0" layoutY="140.0"
			mnemonicParsing="false" style="-fx-background-color: #4fb3bf;"
			text="Continue as guest" />
		<Button fx:id="loginButton" alignment="CENTER"
			defaultButton="true" layoutX="220.0" layoutY="140.0"
			mnemonicParsing="false" style="-fx-background-color: #4fb3bf;"
			text="Login" />
		<PasswordField fx:id="password" layoutX="100.0"
			layoutY="90.0" prefHeight="25.0" prefWidth="175.0" />

	</children>
	<fx:define>
		<RequiredField fx:id="rqdUsername">
			<srcControl>
				<fx:reference source="user"></fx:reference>
			</srcControl>
		</RequiredField>
		<RequiredField fx:id="rqdLoginPass">
			<srcControl>
				<fx:reference source="password"></fx:reference>
			</srcControl>
		</RequiredField>
	</fx:define>
	<ErrorLabel message="Invalid credentials please try again!!"
		layoutX="80.0" layoutY="180.0">
		<validator>
			<fx:reference source="rqdUsername"></fx:reference>
		</validator>
	</ErrorLabel>
	<ErrorLabel message="Invalid credentials please try again!!"
		layoutX="80.0" layoutY="180.0">
		<validator>
			<fx:reference source="rqdLoginPass"></fx:reference>
		</validator>
	</ErrorLabel>
</AnchorPane>
